{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üåê Run Flask Web Calculator",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_RUN_PORT": "5001"
            },
            "justMyCode": true,
            "purpose": [
                "debug-in-terminal"
            ],
            "args": []
        },
        {
            "name": "üöÄ Run CLI Calculator Demo",
